@model IEnumerable<ECommerce.BusinessObjects.Item>

@{
    ViewBag.Title = "Items";
}

<h2><i>ITEMS</i></h2>

<p>
    @Html.ActionLink("Create New", "Create",new { area = "" }, new { @type = "button", @class = "btn btn-info" })
</p>
<table class="table table-dark table-bordered table-hover ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            
            <td align="center">
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit","Item", new { id = item.Id }, new { @type = "button", @class = "btn btn-success" }) 
                @Html.ActionLink("Details", "Details","Item", new { id = item.Id }, new { @type = "button", @class = "btn btn-warning" }) 
                @Html.ActionLink("Delete", "Delete","Item", new { id = item.Id }, new { @type = "button", @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
