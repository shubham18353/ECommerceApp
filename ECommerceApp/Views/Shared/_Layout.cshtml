<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EComm</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .body-content {
            padding:30px
        }
        body{
            background-color:lightblue
                
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
        <div class="container-fluid">
            @Html.ActionLink("EComm", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { aria = "" }, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", new { aria = "" }, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", new { aria = "" }, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">@Html.ActionLink("Category", "Index", "Category", new { aria = "" }, new { @class = "nav-link active" })</li>
                    <li class="nav-item">@Html.ActionLink("Item", "Index", "Item", new { aria = "" }, new { @class = "nav-link active" })</li>
                    <li class="nav-item dropdown active">
                        <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Select Category
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            @*@foreach (var item in )
                            {

                                <li>
                                    @Html.ActionLink(item.Name, "Item", new { name = item.Name })
                                </li>

                            }*@
                            <li>@Html.ActionLink("Mobiles", "Items", "Category", new { name = "Mobile" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Laptops", "Items", "Category", new { name = "Laptop" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Tablets", "Items", "Category", new { name = "Tablet" }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
       
    </nav>
    
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - ECommerceApplication</p>
            </footer>
        </div>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
