@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "ms-auto" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav nav-item ms-auto">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class="nav-link ms-auto active"})
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-warning" tabindex="-1" role="button" aria-disabled="true">Log off</a></li>
    </ul>
    }
}
else
{
    
    <ul class="navbar-nav ms-auto">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" ,@class="nav-link active" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link active" })</li>
    </ul>
}
